<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://demo.ronin.dev/beerstore/contract/customerData"
           targetNamespace="http://demo.ronin.dev/beerstore/contract/customerData" elementFormDefault="qualified">

    <xs:element name="getCustomerRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="name" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getCustomerResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="customerData" type="tns:customerModel"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="customerModel">
        <xs:sequence>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="firstName" type="xs:string"/>
            <xs:element name="lastName" type="xs:string"/>
            <xs:element name="address" type="tns:addressModel"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="addressModel">
        <xs:sequence>
            <xs:element name="country" type="xs:string"/>
            <xs:element name="city" type="xs:string"/>
            <xs:element name="streetAddress" type="xs:string"/>
                <xs:element name="zip" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>